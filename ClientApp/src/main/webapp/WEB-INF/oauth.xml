<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
      http://www.springframework.org/schema/beans 
      http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
      http://www.springframework.org/schema/context 
      http://www.springframework.org/schema/context/spring-context-4.2.xsd">

	<context:property-placeholder location="classpath:clientapp.properties" />

	<bean id="oauthfilter"
		class="com.cgi.security.oauth2.DefaultLocalAuthenticationFilter">

		<property name="tokenAttribute" value="${token.attribute}" />
		<property name="authorizeUrl" value="${authorize.url}" />
		<property name="sccessTokenUri" value="${access.token.uri}" />
		<property name="clientSecret" value="${client.secret}" />
		<property name="clientId" value="${client.id}" />
		<property name="redirectUri" value="${redirect.uri}" />
		<property name="scope" value="${scope}" />

	</bean>

</beans>